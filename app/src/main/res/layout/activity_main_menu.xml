<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    tools:context="com.example.manon.weirdwords.MainMenu">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/toolbar">

        <ImageButton
            android:id="@+id/undo_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/icone_undo"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:id="@+id/indice_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@mipmap/icone_indice"
            android:layout_alignParentRight="true"/>

        <ImageButton
            android:id="@+id/param_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@mipmap/icone_param"
            android:layout_toLeftOf="@+id/indice_button"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@mipmap/logo"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/play_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@mipmap/main_menu_button"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:text="Jouer"
        android:textColor="#e5d8c0"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/quit_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@mipmap/main_menu_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="80dp"
        android:text="Quitter"
        android:textColor="#e5d8c0"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/credits_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@mipmap/main_menu_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="80dp"
        android:text="CrÃ©dits"
        android:textColor="#e5d8c0"
        android:textStyle="bold"
        android:textSize="30sp"
        />


</LinearLayout>
